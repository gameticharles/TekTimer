{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TekTimer",
  "version": "0.2.2",
  "identifier": "com.tektimer.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Exam & Quiz Timer",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzMTgyQzczRkRDMTE2NEMKUldSTUZzSDljeXdZNDNlRW12ZEQrakplUWNNSExZTnA0NGZtZWQ0Qjl1ZCs0WHN3US9VM0F6ZjkK",
      "endpoints": [
        "https://github.com/gameticharles/TekTimer/releases/latest/download/updater.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}